@page
@model RazorApp1.Pages.FlightPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New Flight</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].FlightCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Airport)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Flight[0].Plane)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flight) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>

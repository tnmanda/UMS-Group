@page
@model RazorApp1.Pages.BookingPage.CreateModel

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerBooking.Name" class="control-label"></label>
                <input asp-for="PassengerBooking.Name" class="form-control" />
                <span asp-validation-for="PassengerBooking.Name" class="text-danger"></span>
            </div>

             <label asp-for="PassengerBooking.FlightCode" class="control-label"></label>
                <select asp-for="PassengerBooking.FlightCode" class="form-control"
                        asp-items="@Model.FlightList">
                    <option value="">-- Select Flight --</option>
                </select>
                <!--
            <span asp-validation-for="Flight.FlightCode" class="text-danger" />
            -->

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model RazorApp1.Pages.BookingPage.IndexModel

@{
    ViewData["Title"] = "Booking Index";
}

<h1>Flight Index</h1>

<p>
    <a asp-page="Create">Create New Flight</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PassengerBooking[0].Name)
            </th>
            <th>@Html.DisplayNameFor(model => model.PassengerBooking[0].FlightCode)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PassengerBooking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
